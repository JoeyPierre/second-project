<div class="author">
    <h1 class="author__heading">Just My Opinion<div> 🤷🏾 </div>
    </h1>
    <p class="author__body">Former Hip-Hop Artist turned Full Stack Web Developer with an Opinion</p>
</div>
<img src="/img/hero-image.webp" alt="person lookin out through window" class="hero-image" width="981" height="528">
<section class="articles">
    <h2 class="author__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% posts.forEach(post => { %>
         <li>
            <a href="/posts/<%-post._id %>">
                <span><%-post.title %></span>
                <img src="<%= post.image %>" alt="<%= post.title %>" class="post-images">
                <span class="article-list__date"><%-post.createdAt.toDateString()%></span>
            </a>
        </li>
        <% }) %>
    </ul>
    <a href="#" class="pagination">&lt;View Older Post</a>
</section>